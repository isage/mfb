#!/usr/bin/env perl
use Mojolicious::Lite;
use IO::Dir;
use File::Stat::ModeString;
use DateTime;
use Number::Bytes::Human qw/format_bytes/;

app->config(hypnotoad => {listen => ['http://*:11007']});

get '/*path' => { path => ''} => sub {
  my $self = shift;

  my $basedir=$self->app->static->paths->[0];
  my $path = '/'.$self->stash('path');

  my @files;
  my @dirs;

  my $d = IO::Dir->new($basedir.$path);

  if (defined $d)
  {
    while (defined($_ = $d->read))
    {
      next if ($_ eq '.');
      next if ($_ eq '..' && $path eq '/');
      push @dirs, $_ if (-d $basedir.$path.$_);
    }
    $d->rewind;
    while (defined($_ = $d->read))
    {
      if (-f $basedir.$path.$_)
      {
        my ($dev,$ino,$mode,$nlink,$uid,$gid,$rdev,$size,
               $atime,$mtime,$ctime,$blksize,$blocks)
                          = stat($basedir.$path.$_);
        my $file;
        $file->{"name"} = $_;
        $file->{"mode"} = mode_to_string($mode);
        my $dt = DateTime->from_epoch( epoch => $mtime );
        $file->{"time"} = $dt->hms." ".$dt->dmy;
        $file->{"size"} = format_bytes($size);
        push @files, $file;
      }
    }
    undef $d;
  }
  else
  {
    return $self->render_not_found();
  }
  $self->render("index",msg => $path, files => \@files, dirs => \@dirs);
};

app->start;

__DATA__

@@ index.html.ep
% layout 'default';
% title $msg;

<h2><%= $msg %></h2>
<div class="row">
  <div class="col-lg-12">
