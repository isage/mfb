        <th>Name</th>
        <th>Mode</th>
        <th>Modified</th>
        <th>Size</th>
      </tr>

% foreach my $file (@{$dirs}) {
      <tr>
        <td><span class="glyphicon glyphicon-folder-open"></span></td>
